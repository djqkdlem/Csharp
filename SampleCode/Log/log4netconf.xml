    <level value="ALL" />
    <appender-ref ref="SQLPageUsageAppender" />
  </logger>

  <logger name="LoginLogger">
    <level value="ALL" />
    <appender-ref ref="SQLLoginLoggerAppender" />
  </logger>-->
</log4net>